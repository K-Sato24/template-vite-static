{
  "name": "my-template-vite",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "author": "",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "generate:webp": "node scripts/convert-to-webp.mjs",
    "watch:webp": "node scripts/convert-to-webp.mjs --watch",
    "generate:index": "node scripts/generate-partial-indexes.cjs",
    "watch:index": "chokidar \"src/assets/styles/{module,plugins,page}/**/*.scss\" -c \"npm run generate:index\" --initial --await-write-finish 500",
    "dev:vite": "vite --host",
    "dev:watch-images": "node scripts/watch-and-generate-webp.mjs",
    "dev": "npm-run-all --parallel dev:vite watch:index dev:watch-images",
    "postbuild:images": "node scripts/recompress-dist-images.mjs",
    "build": "vite build --mode staging && npm run postbuild:images",
    "build:production": "vite build --mode production && npm run postbuild:images",
    "preview": "vite preview --host",
    "lint:html": "markuplint \"**/*.html\"",
    "lint:style:css": "biome check --write ./src && stylelint --fix **/*.{css,scss,sass}",
    "lint:style:scss": "stylelint --fix **/*.{css,scss,sass}",
    "lint:style": "npm run lint:style:css && npm run lint:style:scss",
    "lint:script": "biome check --write ./src",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{html,hbs,mustache}": [
      "markuplint",
      "prettier --write"
    ],
    "*.css": [
      "biome check --write",
      "stylelint --fix"
    ],
    "*.{scss,sass}": "stylelint --fix",
    "*.{ts,tsx,js,jsx}": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@markuplint/mustache-parser": "^4.6.19",
    "@types/node": "^24.2.1",
    "chokidar": "^4.0.3",
    "chokidar-cli": "^3.0.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "markuplint": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-preset-env": "^9.5.14",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.89.2",
    "sharp": "^0.34.3",
    "stylelint": "^16.23.1",
    "stylelint-config-recess-order": "^7.2.0",
    "terser": "^5.43.1",
    "vite": "^6.1.0",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "volta": {
    "node": "20.10.0"
  }
}
